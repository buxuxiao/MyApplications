<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_Small" parent="AppTheme">
        <item name="fontsize_1">14sp</item>
        <item name="fontsize_2">12sp</item>
        <item name="fontsize_3">10sp</item>
    </style>

    <style name="Theme_Medium" parent="AppTheme">
        <item name="fontsize_1">18sp</item>
        <item name="fontsize_2">16sp</item>
        <item name="fontsize_3">14sp</item>
    </style>

    <style name="Theme_Large" parent="AppTheme">
        <item name="fontsize_1">24sp</item>
        <item name="fontsize_2">20sp</item>
        <item name="fontsize_3">16sp</item>
    </style>

    <style name="Theme_Super_Large" parent="AppTheme">
        <item name="fontsize_1">30sp</item>
        <item name="fontsize_2">24sp</item>
        <item name="fontsize_3">18sp</item>
    </style>

    <!-- 为相应的控件设置style -->
    <style name="title_text">
        <item name="android:textSize">?@attr/fontsize_1</item>
    </style>
    <style name="subtitle_text">
        <item name="android:textSize">?@attr/fontsize_2</item>
    </style>
    <style name="article_text">
        <item name="android:textSize">?@attr/fontsize_3</item>
    </style>

    <style name="style_cmd_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">#4888ff</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
